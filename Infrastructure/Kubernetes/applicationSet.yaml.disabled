apiVersion: argoproj.io/v1alpha1
kind: ApplicationSet
metadata:
  name: expensetracker-environments
  namespace: argocd
spec:
  generators:
  - list:
      elements:
      - cluster: in-cluster
        url: https://kubernetes.default.svc
        environment: development
        namespace: expensetracker-dev
        replicaCount: "1"
        resources: |
          requests:
            memory: "128Mi"
            cpu: "100m"
          limits:
            memory: "256Mi"
            cpu: "200m"
      - cluster: in-cluster
        url: https://kubernetes.default.svc
        environment: staging
        namespace: expensetracker-staging
        replicaCount: "2"
        resources: |
          requests:
            memory: "256Mi"
            cpu: "200m"
          limits:
            memory: "512Mi"
            cpu: "500m"
      - cluster: in-cluster
        url: https://kubernetes.default.svc
        environment: production
        namespace: expensetracker-prod
        replicaCount: "3"
        resources: |
          requests:
            memory: "512Mi"
            cpu: "500m"
          limits:
            memory: "1Gi"
            cpu: "1000m"
  template:
    metadata:
      name: 'expensetracker-{{environment}}'
    spec:
      project: default
      source:
        repoURL: https://github.com/ravin00/ExpenseTracker
        targetRevision: HEAD
        path: Infrastructure/Kubernetes
      destination:
        server: '{{url}}'
        namespace: '{{namespace}}'
      syncPolicy:
        automated:
          prune: true
          selfHeal: true
        syncOptions:
        - CreateNamespace=true
        - PrunePropagationPolicy=foreground