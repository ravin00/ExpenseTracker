{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run All Services",
      "dependsOn": [
        "Run AuthService",
        "Run ExpenseService",
        "Run CategoryService",
        "Run BudgetService",
        "Run SavingsGoalService",
        "Run AnalyticsService"
      ],
      "problemMatcher": []
    },
    {
      "label": "Run AuthService",
      "type": "shell",
      "command": "dotnet run",
      "options": {
        "cwd": "${workspaceFolder}/apps/backend/AuthService"
      },
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^.*$",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*Building.*$",
          "endsPattern": "^.*Application started.*$"
        }
      }
    },
